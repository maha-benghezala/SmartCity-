                    {% if actualite.theme == "Quoi de neuf" %}
                        <div class="cards-system">
                            <div class="card-system">
                                <div class="card-system-inner">
                                    <div class="card-system-image">
                                        <img src="{{ asset(actualite.idMunicipalite.image) }}" height="120" width="120">

                                    </div><!-- /.card-system-image -->

                                    <div class="card-system-content">
                                        <p align="justify">
                                            {{ actualite.description }}<br>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.card-system -->
                    {% endif %}
                {% endfor %}
            </div>

        </div><!-- /.col-* -->
        <div class="col-sm-4">
            <h3>Evenement<a href="#"> <i class="fa fa-chevron-down"></i></a></h3>
            <div class="background-white p30 mb50">
                {% for actualite in actualite %}
                    {% if actualite.theme == "Evenement" %}
                        <div class="cards-system">
                            <div class="card-system">
                                <div class="card-system-inner">
                                    <div class="card-system-image">
                                        <img src="{{ asset(actualite.idMunicipalite.image) }}" height="120" width="120">

                                    </div><!-- /.card-system-image -->

                                    <div class="card-system-content">
                                        <p align="justify">{{ actualite.description }}<br>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.card-system -->
                    {% endif %}
                {% endfor %}
            </div>

        </div><!-- /.col-* -->
    </div>

{% endblock %}
