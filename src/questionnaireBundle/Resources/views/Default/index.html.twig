{% extends('base.html.twig') %}
{% block section %}
    {{ form_start(form) }}
    <section class="clearfix bg-dark listingSection">
        <div class="content-admin-main-inner">
            <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="background-white p20 mb50">
                <div class="dashboardBoxBg mb30">
                    <div class="profileIntro paraMargin">
                        <h3>Ajouter Probl√®me</h3>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                {{ form_label(form.titre)}}
                                {{ form_widget(form.titre)}}
                            </div>
                            <div class="form-group col-sm-6">
                                {{ form_label(form.description)}}
                                {{ form_widget(form.description)}}
                            </div>
                            <div class="col-sm-12" id="map" style="background: #00d2b8">
                            </div>
                            <div class="form-group col-sm-6 ">
                                {{ form_label(form.Latitude) }}
                                {{ form_widget(form.Latitude) }}
                            </div>
                            <div class="form-group col-sm-6 ">
                                {{ form_label(form.Longitude) }}
                                {{ form_widget(form.Longitude) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="dashboardBoxBg mb30">
                    <div class="profileIntro paraMargin">
                        <h3>Gallerie</h3>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <div class="imageUploader text-center">
                                    <div class="file-upload">
                                        <div class="upload-area">
                                            {{ form_label(form.image) }}
                                            {{ form_widget(form.image) }}

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-xs-12" id="menu">
                                <div class="imageUploader text-center">
                                    <div class="file-upload">
                                        <div class="upload-area">
                                            {{ form_label(form.video) }}
                                            {{ form_widget(form.video) }}

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-footer text-center">
                    {{ form_widget(form.Valider)}}
                </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </section>

{{ form_end(form) }}
    {% endblock %}
    {% block js %}
    <script src="{{ asset('Map/map.js') }}">
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYy42R1JcZqt_UlmfQqBP6nlZt57aNJzs&callback=initMap">
    </script>
{% endblock %}