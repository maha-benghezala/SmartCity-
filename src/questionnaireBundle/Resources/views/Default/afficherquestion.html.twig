{% extends('base.html.twig') %}
{% block section %}
    <section class="clearfix  bg-dark dashboardOrders">
            <div class="container">
                 <h3>Liste des suggestions</h3>
                    <div class="row">
                                    {% for q in question %}
                                        <div class="card-row">
                                        <div class="post post-boxed">
                                            <div class="post-content">
                                                <h2><a href="blog-detail.html">{{ q.titre }}</a></h2><a>
                                                    <a href="#">{{ q.question }} ?</a>
                                                    <p>{{ q.description }}</p>
                                                </a>
                                            </div><!-- /.post-content -->
                                            <a>

                                            </a>
                                            <div class="post-meta clearfix"><a>
                                                </a><div class="post-meta-author"><a>By </a><a href="#">{{ q.idMunicipalite.nom }}</a></div><!-- /.post-meta-author -->
                                                <div class="post-meta-date">{{ q.getDate()|date }}</div><!-- /.post-meta-date -->
                                                {% if q.choix1 != null %}
                                                <div class="post-meta-more"><a href='javascript:popup("http://127.0.0.1:8000/app/{{ q.id }}/{{ app.user.id }}")' class="btn btn-primary">Donner votre avis<i class="fa fa-chevron-right"></i></a></div><!-- /.post-meta-more -->
                                                {% endif %}
                                            </div><!-- /.post-meta -->
                                        </div>
                                     </div>
                                    {% endfor %}
                              </div>
                            </div>




    </section>
{% endblock %}
{% block js %}
        <script>
        function popup(page) {
            window.open(page,'popup','width=685, height=455, toolbar=false, scrollbars=false');
        }
       </script>
{% endblock %}
